<!DOCTYPE html>
<html>
  <head>
    <title>TheShelf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="my-nav">
      <div class="container">
        <ul>
          <li><%= link_to "Home", root_path %></li>
        <% if current_user %>
          <li class="li-right"><%= link_to "Sign out", destroy_user_session_path, :data => {:confirm => "You sure cat?", :method => "delete"} %></li>
          <li class="li-right"><%= current_user.email %></li>
        <% else %>
          <li class="li-right"><%= link_to "Sign up", new_user_registration_path %></li>
          <li class="li-right"><%= link_to "Sign in", user_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="content-wrapper">
      <div class="container">
        <div class="shelf-img">
          <%= image_tag ("shelf.png") %>
          <h1>The Shelf</h1>
        </div>
        <p class="text-style"><%= flash[:alert] %></p>
        <p class="text-style"><%= flash[:notice] %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>

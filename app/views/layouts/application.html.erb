<!DOCTYPE html>
<html>
  <head>
    <title>TheShelf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Convergence|Jockey+One|Quicksand|Raleway:900|Suez+One|Viga" rel="stylesheet">
  </head>
  <body>
    <div class="test">

    </div>

    <div class="my-nav">
      <div class="container">
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Products", products_path %></li>
          <li><%= link_to "About", root_path + "pages/about" %></li>
        <% if current_user %>
          <li class="li-right"><%= link_to "Admin", root_path + "admin" if is_admin? %></li>
          <li class="li-right"><%= link_to "Sign out", destroy_user_session_path, :data => {:confirm => "You sure cat?", :method => "delete"} %></li>
          <li class="li-right btn btn-default doodle"><span class="glyphicon glyphicon-shopping-cart"> </span> <%= link_to "Shopping Cart", cart_path  %></li>
        <% else %>
          <li class="li-right"><%= link_to "Sign up", new_user_registration_path %></li>
          <li class="li-right"><%= link_to "Sign in", user_session_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="content-wrapper">
      <p class="right">
        <%= current_user.email if current_user %>
      </p>
      <div class="container">
        <div class="shelf-img">
          <%= image_tag ("shelf.png") %>
          <h1>The Shelf</h1>
        </div>
        <p class="text-style"><%= flash[:alert] %></p>
        <p class="text-style"><%= flash[:notice] %></p>
        <p class="text-style"><%= flash[:error] %></p>




        <%= yield %>
      </div>
    </div>
  </body>
</html>

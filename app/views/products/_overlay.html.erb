<div class="color-block">
  <div class="overlay">
    <div class="exit">
      <span>â˜‰</span>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="img-in-grid" style="background-image:url(<%=@product.avatar%>);"></div>
      </div>
      <div class="col-sm-6">
        <h1><%= @product.name %></h1>
        <h3><%= number_to_currency @product.price %></h3>
        <p><%= @product.description %></p>
        <p><%= @product.category %></p>
        <div class="add-product">
          <%= form_for @order_item do |f| %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.number_field :quantity, value: 1 %>
          <%= f.submit "Add to cart" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container cart">
  <% if @order_items.any? %>
    <% @order_items.each do |item| %>
      <br><hr>
      <p><%= item.product.name %></p>
      <p> Unit Price: <%= number_to_currency item.product.price %>  </p>
      <p>Quantity:
        <%= form_for item do  |f| %>
          <%= f.select :quantity, options_for_select((0..20), item.quantity), {}, :onchange => "this.form.submit()" %>
        <% end %>
        <!-- <%= link_to "test", item, id: "monkeytest", remote: true%> -->
      </p>
       <p>Total Price:
         <%= number_to_currency (item.product.price * item.quantity) %>
       </p>
    <% end %>
    <br>
    <br>
  <% else %>
    <p>Your shopping cart is empty.</p>
  <% end %>
</div>

<%= render 'charges/new' %>
